{% extends '::base.html.twig' %}
{% block body -%}

{% block title "Contact" %}

    {% block content %}

        <h1>Contactez-nous</h1>

        <form action="{{ path('contact') }}" method="post" {{ form_enctype(form) }}>

            {{ form_errors(form.email) }}
            {{ form_widget(form.email, { 'attr':{'placeholder': 'Email' }}) }}<br/><br/>

            {{ form_errors(form.subject) }}
            {{ form_widget(form.subject, { 'attr':{'placeholder': 'Sujet' }}) }}<br/><br/>

            {{ form_errors(form.content) }}
            {{ form_widget(form.content, { 'attr':{'placeholder': 'Contenu'}}) }}<br/><br/>

            {{ form_rest(form) }}

            <input type="submit" value="Envoyez"/>

        </form>

    {% endblock %}

{% endblock %}